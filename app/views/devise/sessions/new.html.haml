.index
  .signin
    .signin-inner
      .signin-form
        %h4.text-center Log in
        = render 'shared/error'
        = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .form
            = f.input :email, required: false, autofocus: true, placeholder: 'Enter user email'
            = f.input :password, required: false, placeholder: 'Enter password'
            .row.form-action
              .col-sm-6
                = f.input :remember_me, as: :boolean, label_html: { class: 'i-checkbox' } if devise_mapping.rememberable?
              .col-sm-6
                = f.button :submit, 'Log in', class: 'btn btn-lg btn-primary btn-block'
        = render 'devise/shared/links'
